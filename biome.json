{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": [
      "**/src/**/*",
      "**/test/**/*",
      "**/demo/**/*",
      "!**/dist/**/*",
      "!**/node_modules/**/*",
      "!**/scripts/**/*"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useImportType": "off",
        "useNamingConvention": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["snake_case"]
          }
        }
      },
      "nursery": {
        "useExplicitType": "off"
      },
      "suspicious": {
        "noConsole": "warn"
      }
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  }
} 